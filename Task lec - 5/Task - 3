#include <stdio.h>
#include <conio.h>

void main()
{
    int n, first, last;
    printf("Enter number: ");
    scanf("%d", &n);

    last = n % 10;

    while(n >= 10)
    {
        n = n / 10;
    }
    first = n;

    printf("First digit = %d\n", first);
    printf("Last digit = %d\n", last);

    getch();
}
