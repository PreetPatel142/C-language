#include <stdio.h>
#include <conio.h>

void main()
{
    int n, rem, big = 0;
    printf("Enter number: ");
    scanf("%d", &n);

    while(n > 0)
    {
        rem = n % 10;
        if(rem > big)
        {
            big = rem;
        }
        n = n / 10;
    }

    printf("Biggest digit = %d", big);
    getch();
}
